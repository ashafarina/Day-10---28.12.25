students = {}

while True:
    name = input("Name (or exit): ")
    if name == "exit":
        break
    marks = list(map(int, input("Enter 3 marks: ").split()))
    avg = sum(marks) / 3
    grade = "A" if avg >= 80 else "B" if avg >= 60 else "C"
    students[name] = (avg, grade)

for s, v in students.items():
    print(s, "Avg:", v[0], "Grade:", v[1])
